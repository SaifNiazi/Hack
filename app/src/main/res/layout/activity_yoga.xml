<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/work4"

    tools:context="com.example.hp.hack.workout.Yoga">


    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/yoga_sun_salutation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="175dp"
        android:height="80dp"
         android:width="140dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:id="@+id/yoga_full_sequence"
        android:layout_marginTop="255dp"
        android:height="80dp"
        android:width="360dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/yoga_for_runners"
        android:height="330dp"
        android:width="360dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/yoga_full_sequence"
        android:layout_above="@+id/pilates" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/pilates"
        android:height="60dp"
        android:width="360dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>