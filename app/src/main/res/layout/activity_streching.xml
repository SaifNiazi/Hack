<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.hack.workout.Strech"
    android:background="@drawable/work5">

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="80dp"
        android:width="360dp"

         android:id="@+id/head_to_toe_warmup_stretch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="80dp"
        android:width="360dp"

        android:id="@+id/full_body_stretch"
        android:layout_below="@+id/head_to_toe_warmup_stretch"
        android:layout_alignParentStart="true" />

    <Button

        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="80dp"
        android:width="360dp"
        android:id="@+id/standing_only_stretch"
        android:layout_below="@+id/full_body_stretch"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="80dp"
        android:width="360dp"
        android:id="@+id/back_strengthening"
        android:layout_below="@+id/standing_only_stretch"
        android:layout_centerHorizontal="true" />
</RelativeLayout>