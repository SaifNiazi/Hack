<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/ever</item>
        //
        <item name="colorPrimaryDark">@color/ever</item>
        //
        <item name="colorAccent">@color/ever</item>
        //

        <item name="android:windowBackground">@color/ever</item>
        //

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/ever</item>
        //
        <item name="colorControlHighlight">@color/ever</item>
        //
        <item name="android:textColorHint">@color/white</item>

        <item name="colorButtonNormal">@color/ever</item>
        //
        <item name="android:colorButtonNormal">@color/ever</item>
        //
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/ever</item>
        //
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/ever</item>
        //
    </style>

    <style name="MyCustomTabLayout" parent="android:Theme.Holo.Light">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>

    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>